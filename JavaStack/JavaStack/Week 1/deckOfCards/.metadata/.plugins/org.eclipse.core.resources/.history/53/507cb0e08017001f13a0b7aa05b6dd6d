package com.code.deckOfCards;

import java.util.HashMap;

public class Card {
	
	private String suit;
	private int rank;
	private String name;
	
	public Card (String suit,int rank) {
		this.suit=suit;
		this.rank=rank;
		this.name="";
		HashMap<Integer,String> names = new HashMap<Integer,String>();
		
		names.put(1, "ACE");
		names.put(11, "jack");
		names.put(12,"Queen");
		names.put(13, "KING");
		
		if(names.get(rank) != null) {
			this.name=Integer.toString(rank);
		}else {
			this.name = Integer.toString(rank);
		}
	}
	public void showCard() {
		System.out.println("%s of %s\n",this.name,this.suit);
	}
	public String getSuit() {
		return suit;
	}
	public void setSuit(String suit) {
		this.suit = suit;
	}
	public int getRank() {
		return rank;
	}
	public void setRank(int rank) {
		this.rank = rank;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}

}
